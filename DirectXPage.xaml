<Page
    x:Class="Somability_UI.DirectXPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <SwapChainBackgroundPanel x:Name="SwapChainPanel" PointerMoved="OnPointerMoved" PointerReleased="OnPointerReleased">
        <TextBlock x:Name="SimpleTextBlock" HorizontalAlignment="Center" FontSize="42" Height="72" Text="Hello, XAML!" Margin="0,0,0,50"/>
    </SwapChainBackgroundPanel>

    <Page.TopAppBar>
        <AppBar>

            <Image Source="/Assets/somability-logo.png" Margin="0,30,0,30" Height="144"/>

        </AppBar>
    </Page.TopAppBar>


    <Page.BottomAppBar>
        <AppBar>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Style="{StaticResource BigButton}" Width="350" Height="350" Margin="0,30,30,30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="Assets/bkg-reach.png" Stretch="Fill" Height="350"></Image>
                        <StackPanel Grid.Row="0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center">REACH</TextBlock>
                        </StackPanel>
                        <TextBlock Grid.Row="1"></TextBlock>
                    </Grid>
                </Button>

                <Button Style="{StaticResource BigButton}" Width="350" Height="350" Margin="0,30,30,30" Click="Button_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="Assets/bkg-flow.png" Stretch="Fill" Height="350"></Image>
                        <StackPanel Grid.Row="0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center">FLOW</TextBlock>
                        </StackPanel>
                        <TextBlock Grid.Row="1"></TextBlock>
                    </Grid>
                </Button>

                <Button Style="{StaticResource BigButton}" Width="350" Height="350" Margin="0,30,0,30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="Assets/bkg-balance.png" Stretch="Fill" Height="350"></Image>
                        <StackPanel Grid.Row="0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center">BALANCE</TextBlock>
                        </StackPanel>
                        <TextBlock Grid.Row="1"></TextBlock>
                    </Grid>
                </Button>

            </StackPanel>

        </AppBar>
    </Page.BottomAppBar>

</Page>
